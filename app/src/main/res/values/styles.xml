<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#37a5af</item>
        <item name="colorPrimaryDark">#4C868F</item>
        <item name="colorAccent">#9b26af</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme_violet" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#c035e1</item>
        <item name="colorPrimaryDark">#A831C4</item>
        <item name="colorAccent">#69f0ae</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme_blue" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1e88e5</item>
        <item name="colorPrimaryDark">#217AC8</item>
        <item name="colorAccent">#FF4081</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme_orange" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff9801</item>
        <item name="colorPrimaryDark">#DA8201</item>
        <item name="colorAccent">#6639b6</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme_green" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#45971b</item>
        <item name="colorPrimaryDark">#40891A</item>
        <item name="colorAccent">#785447</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Dialog">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="NavigationDrawer" parent="NavigationDrawer" >
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textColorPrimary">@color/nav_text_color</item>-->
        <!--<item name="android:background">@color/nav_bg</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

</resources>